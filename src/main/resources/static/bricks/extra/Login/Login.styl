.{$px}Login
    max-width: 840px;
    padding: 70px 50px
    border-radius: 10px
    margin-bottom: 10px
    margin-top: 0px
    box-shadow: 0 0 24px rgba(0, 0, 0, 0.1);
    background: clr-white
    margin-left: auto
    margin-right: auto
    display: flex
    justify-content: center
    align-items: center
    +m('phone')
        padding-left: 20px
        padding-right: 20px
    
    &-title
        color: clr-dk;
        font-size: 23px;
        font-weight: 500;
        text-transform: uppercase;
        line-height: 1.4em
        display: block
        text-align: center
        margin-bottom: 50px
        +m('phone')
            font-size: font-md
    
    &-step
        &_hide
            display: none
    
    &-reg
        font-size: font-nrp
        margin-top: 30px
        display: inline-block
    
    &_registration
        display: block
        +b(form)
            &-group
                +b(form-group_key)
                    display: none
                    + {b(form-group)}
                        min-width: 150px
                        max-width: 150px
                        text-align: right
                
                &_confirm
                    +b(form-group_key)
                        display: block
                        width: 150px
                
                &_row
                    > {b(form-group)}
                        margin-top: 0
                        margin-left: 20px
                        
                        &:first-child
                            width: 100%
                            margin-left: 0
                    +m('tablet')
                        flex-wrap: wrap
                        +b(form-btn)
                            padding-left: 20px
                            padding-right: 20px
                        
                        +b(form-input_code)
                            display: none
                        //width: 100px
                        &{b(form-group_confirm)}
                            +b(form-input_code)
                                display: block
                        //+b(form-group_key)
                        //width: 100px
                        
                        > {b(form-group)}
                            &:first-child
                                margin-bottom: 20px
                            
                            &_key
                                margin-left: 0
                                display: block
                                width: 100%
                            
                            &:last-child
                                max-width: 125px
                        +b(form-input)
                            &_code
                                text-align: left
                    +m('phone')
                        +b(form-input_code)
                            width: 100%
                        +b(form-group)
                            width: 100%
                            margin-bottom: 20px
                            margin-left: 0
                            &_key
                                max-width: none
                            &:last-child
                                max-width: 100% !important
                                text-align: right
                        +b(form-btn)
                            margin-left: auto
                
                &_key
                    max-width: 150px
