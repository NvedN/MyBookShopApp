.{$px}Middle
    clearfix()
    overflow: hidden
    margin-bottom: 43px

    &-column
        float: left
        width: 250px
        margin-right: -100%
        margin-top: 20px
        +m('tablet')
            float: none
            margin-right: 0
            width: auto
            margin-top: 50px


    &-top
        padding: 20px 0 20px
        margin-bottom: 20px
        background: clr-primary img('bg', 'books.png') left center repeat-x
        min-height: 130px
        display: flex
        align-items: center
        justify-content: center
        +e(-title)
            margin: 0 !important
            color: clr-white
            text-align: center
            font-size: 28px;
            font-weight: 400;
            padding-bottom: 0
            line-height: 45px;
            text-transform: uppercase;
            letter-spacing: 1.12px;
            &:after
                display: none
    &_form
        visibility: visible
        //background: linear-gradient(0deg, rgba(clr-primary,0) 40%, rgba(clr-primary,1) 80%);
        position: relative
        &:after
            position: absolute
            content: ''
            display: block
            background: img('bg', 'entry.jpg') center center no-repeat;
            background-size: cover;
            left: 0
            right: 0
            top: 0
            max-height: 40%;
            height: 200px
            z-index: 1
            +m('phone')
                background: img('bg', 'entry_phone.jpg') center center no-repeat;
        &:before
            position: absolute
            content: ''
            display: block
            background: linear-gradient(0deg, \
                    rgba(clr-white,1) 00%, \
                    rgba(clr-white,0) 80% \
                    ), rgba(clr-black, 0.35)
            left: 0
            right: 0
            top: 0
            max-height: 40%;
            height: 200px
            z-index: 2
            
        +e(-top)
            background: none
            position: relative
            z-index: 3
            margin-bottom: 0
        +e(-main)
            position: relative
            z-index: 3
            margin-top: 0
    &-title
        font-size: 23px;
        font-weight: 500;
        display: block
        position: relative
        padding-bottom: 10px
        line-height: 1.2em
        margin-top: 60px
        margin-bottom: 0
        &:first-child
            margin-top: @margin-top
        &:after
            content: ''
            display: block
            position: absolute
            width: 57px;
            height: 3px;
            background-color: clr-primary;
            bottom: 0
            left: 0
    
    &-footer
        margin-top: 19px

    &-main
        width: 100%;
        position: relative
        margin-top: 20px
        +m('tablet')
            float: none
            padding-left: 0


    &-article
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        background-color: #f4f4f4;

